<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td class = "img-td">
          <strong>Image:</strong>
          <%= image_tag(picture.image) %>
        </td>
        <td><%= picture.title %></td>
        <td><%= picture.content %></td>
    
   
    
    <td class = "img-td">
      <strong>投稿者:</strong>
      <%= image_tag(picture.user.image) %>
    </td>
        <% if current_user.id == picture.user_id %>
          <td><%= link_to 'Show', picture, class: 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_picture_path(picture), class: 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% else %>
          <td><%= link_to 'Show', picture, class: 'btn btn-default' %></td>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
