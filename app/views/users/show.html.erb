<div class="container">
  <div class="row">
    <div class="col-xs-12">
<h1><%= @user.name %>のページ</h1>

<p>メールアドレス: <%= @user.email %></p>

<h1>お気に入り一覧</h1>
<% @favorites_pictures.each do |favorite_picture| %>
<%= hidden_field_tag :"cache[image]", favorite_picture.image.cache_name %>
<%= image_tag(favorite_picture.image.url) %>
<%= favorite_picture.image %>
<%= favorite_picture.title %>
<%= favorite_picture.content %>

<% end %>
<%= link_to 'New Picture', new_picture_path %>
<%= link_to '一覧', pictures_path %>
    </div>
  </div>
</div>

